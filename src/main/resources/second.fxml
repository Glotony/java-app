<?xml version="1.0" encoding="UTF-8"?>

<?import io.github.palexdev.materialfx.controls.MFXButton?>
<?import io.github.palexdev.materialfx.controls.MFXPasswordField?>
<?import io.github.palexdev.materialfx.controls.MFXTextField?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.app.SecondController"
      alignment="CENTER"
      spacing="25"
      style="-fx-background-color: transparent;">

    <padding>
        <Insets top="100" right="50" bottom="50" left="50"/>
    </padding>

    <Label text="Login to Continue"
           style="-fx-font-size: 28px; -fx-font-weight: bold;"/>

    <MFXTextField fx:id="usernameField"
                  floatingText="Username"
                  prefWidth="300"/>

    <MFXPasswordField fx:id="passwordField"
                      floatingText="Password"
                      prefWidth="300"/>

    <MFXButton fx:id="loginButton"
               text="Login"
               buttonType="RAISED"
               onAction="#handleLogin"
               prefWidth="300"
               prefHeight="50"
               style="-fx-font-size: 18px;"/>

    <MFXButton text="â† Back to Welcome"
               onAction="#goBack"
               prefWidth="300"
               style="-fx-font-size: 14px;"/>
</VBox>