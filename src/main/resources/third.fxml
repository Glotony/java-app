<?xml version="1.0" encoding="UTF-8"?>

<?import io.github.palexdev.materialfx.controls.MFXButton?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.app.ThirdController"
      alignment="CENTER"
      spacing="30"
      style="-fx-background-color: transparent;">

    <padding>
        <Insets top="40" right="40" bottom="40" left="40"/>
    </padding>

    <Label text="Main Dashboard"
           style="-fx-font-size: 28px; -fx-font-weight: bold;"/>

    <Label text="Welcome! Choose an option below:"
           style="-fx-font-size: 18px; -fx-text-fill: gray;"/>

    <MFXButton text="Contact Us"
               buttonType="RAISED"
               onAction="#goToContact"
               prefWidth="250"
               prefHeight="50"
               style="-fx-font-size: 18px;"/>

    <MFXButton text="My Profile"
               buttonType="RAISED"
               onAction="#goToProfile"
               prefWidth="250"
               prefHeight="50"
               style="-fx-font-size: 18px;"/>


    <MFXButton text="Products"
               buttonType="RAISED"
               onAction="#goToProducts"
               prefWidth="250"
               prefHeight="50"
               style="-fx-font-size: 18px;"/>


    <MFXButton text="Logout"
               buttonType="RAISED"
               onAction="#handleLogout"
               prefWidth="250"
               prefHeight="50"
               style="-fx-font-size: 18px;"/>
</VBox>